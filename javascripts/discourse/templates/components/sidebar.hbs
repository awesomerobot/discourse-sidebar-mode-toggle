<DSection
  @pageClass="has-sidebar"
  @id="d-sidebar"
  @class="sidebar-container"
  @scrollTop={{false}}
>

  <PluginOutlet @name="sidebar-above-sections" />

  <Sidebar::Sections
    @currentUser={{this.currentUser}}
    @collapsableSections={{true}}
  />

  <PluginOutlet @name="sidebar-above-footer" />

  <Sidebar::Footer />
</DSection>